<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width,initial-scale=1.0">
    <title>Register Form</title>
    <link rel="stylesheet" type="text/css" href="../webpage/CSS/dashboard.css"/> <!-- For universal navbar -->
    <link rel="stylesheet" type="text/css" href="../webpage/CSS/register-form.css"/> <!-- TO DO: Delete any navbar css -->
    <script src="./JS/login-form.js" defer></script>
</head>
<body>
    <header class="navbar">
        <div class="left">
            <a href="/" class="home-link">
                <img src="../webpage/tutor-pictures/GATORlogo.png" width="48" alt="Logo" class="Logo">
                <span class="title" style="color: #efebef; padding-right: 10px; padding-left: 10px;">wiseGATOR</span>
            </a>
        </div>
        <div class="search-container">
            <form class="search-form" action="/search-tutors" method="GET">
                <select name="subject">
                    <option value="">Select Topic</option>
                    <% topics.forEach(topic => { %>
                        <option value="<%= topic.subject %>" <%= (typeof subject !== 'undefined' && subject === topic.subject) ? 'selected' : '' %>><%= topic.subject %></option>
                    <% }); %>
                </select>

                <input type="text" name="search" value="<%= typeof name !== 'undefined' ? name : '' %>" placeholder="Search by name" maxlength="40">
                
                <button type="submit">Search</button>
            </form>
        </div>  
        <div class="right">
            <div class="navbar-buttons">
                <a href="/about-us/"><button>About Us</button></a>
                <a href="/tutor-application/"><button>Become a Tutor</button></a>

                <!-- TO DO: If logged in dashboard else login form -->
                <!-- <a href="/dashboard/"><button>Dashboard</button></a> -->
                <a href="/login-form/"><button>Log In</button></a>

                <!-- <a href="/"><button>Home</button></a> FEATURE MOVED TO LOGO -->
                <!-- <a href="/search-tutors/"><button>Search Tutors</button></a> FEATURE MOVED TO SEARCH BAR -->
            </div>
        </div>
    </header>
    <main class="content">
        <form class="register-form" method="post">
            <h1>Register</h1>

            <br><p>Items with an asterisk (*) are required</p></br>
            
            <label for="email">SFSU Email *</label> 
            <input type="email" id="email" placeholder="e.g. 123456789@sfsu.edu"/>  <br>

            <label for="password">Password *</label> 
            <input type="password" id="password" placeholder="At least 8 characters"/> <br>

            <label for="password-confirm">Re-enter Password *</label> 
            <input type="password" id="password-confirm" placeholder=""/> <br>
            
            <div class="terms">
                <input type="checkbox" id="checkbox"/>
                <label for="checkbox">I've read and accept the <a href="#">Terms of Services</a> *</label> <br>
            </div>

            <input type="submit" value="submit"/> <br>
        </form>
    </main>
    <!-- Temp Error Handling (if individual messages wrap input and labe in div 'input-control')-->
    <div class ="input-control">
        <div class="error" id="error"></div>
    </div>
</body>
</html>
